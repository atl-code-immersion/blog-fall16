<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, placeholder: "Email Address", autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, placeholder: "Password (#{@minimum_password_length} characters minimum)",autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign Up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
